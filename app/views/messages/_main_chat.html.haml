.chat-main
  .chat-main__main-header
    .chat-main__main-header__left-box
      .chat-main__main-header__left-box__current-group
        = @group.name
        %ul.chat-main__main-header__left-box__member-list
          - @group.users.each do |users|
            = users.name

    = link_to edit_group_path(params[:group_id]), method: :get do
      .chat-main__main-header__edit-btn
        Edit
  .chat-main__messages
    = render @messages
    .chat-main__messages__comment
      -# .chat-main__messages__comment__upper-info
    -#     .chat-main__messages__comment__upper-info__talker
    -#       %p キャプテン
    -#     .chat-main__messages__comment__upper-info__date
    -#       %p 2019/04/26(mon) 17:40:33
    -#   .chat-main__messages__comment__text
    -#     %p bbbb
    -# .chat-main__messages__comment
    -#   .chat-main__messages__comment__upper-info
    -#     .chat-main__messages__comment__upper-info__talker
    -#       %p hgd
    -#     .chat-main__messages__comment__upper-info__date
    -#       %p 2019/04/26(mon) 20:12:57
    -#   .chat-main__messages__comment__text
    -#     %p aaa

  .chat-main__form
    = form_for [@group, @message] do |f|
      .new__message
        = f.text_field :content, class: 'form__message', placeholder: 'type a message'
        = f.label :image, class: 'form__mask__image' do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'form__submit'
