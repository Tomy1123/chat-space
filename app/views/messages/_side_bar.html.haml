.chat-side
  .chat-side__side-header
    .chat-side__side-header__side-box
      %p.chat-side__side-header__side-box__username
        = current_user.name

      %ul.chat-side__side-header__side-box__menu
        %li.chat-side__side-header__side-box-user
          = link_to new_group_path  do
            = icon("fas","edit")
        %li.chat-side__side-header__side-box__menu-group
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')

  .chat-side__groups
    - current_user.groups.each do |group|
      .chat-side__groups__group
        = link_to group_messages_path(group) do
          .chat-side__groups__group__name
            = group.name
          .chat-side__groups__group__latest-message
            = group.show_last_message

